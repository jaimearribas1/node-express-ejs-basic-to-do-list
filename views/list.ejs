<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= listTitle %></title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <header>
    <% include header.ejs %>
  </header>

  <main>
    <div id="app">
      <% for (const column in taskColumns) { %>
        <div class="column">
          <h2><%= column %></h2>
          <ul>
            <% taskColumns[column].forEach(task => { %>
              <li><%= task %></li>
            <% }); %>
          </ul>

          <!-- Formulario para añadir tareas a esta columna -->
          <form action="/add-task" method="POST">
            <input type="hidden" name="column" value="<%= column %>">
            <input type="text" name="task" placeholder="Nueva tarea" required>
            <button type="submit">Añadir</button>
          </form>
        </div>
      <% } %>
    </div>
  </main>

  <footer>
    <% include footer.ejs %>
  </footer>
</body>
</html>
